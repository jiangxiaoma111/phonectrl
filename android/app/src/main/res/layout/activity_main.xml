<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_shutdown"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text = "@string/shutdown"/>
    <Button
        android:layout_below="@id/btn_shutdown"
        android:id="@+id/btn_suspend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text = "@string/suspend"/>
    <Button
        android:layout_below="@id/btn_suspend"
        android:id="@+id/btn_reboot"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text = "@string/reboot"/>
    <Button
        android:layout_below="@id/btn_reboot"
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text = "@string/logout"/>

</RelativeLayout>
